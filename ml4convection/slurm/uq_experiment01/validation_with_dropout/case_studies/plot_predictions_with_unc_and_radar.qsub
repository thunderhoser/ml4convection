#!/bin/tcsh

#SBATCH --job-name="plot_predictions_with_unc_and_radar"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
##SBATCH --nodes=1
##SBATCH --ntasks=1
##SBATCH --cpus-per-task=1
##SBATCH --ntasks-per-node=1
#SBATCH --time=12:00:00
#SBATCH --array=1-3
#SBATCH --exclude=h28n12
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=plot_predictions_with_unc_and_radar_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_standalone/ml4convection"
set TOP_RADAR_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_project/radar_data"
set MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_models/uq_experiment01/top-level-skip-dropout=0.375_penultimate-layer-dropout=0.125_output-layer-dropout=0.250"

set prediction_dir_name="${MODEL_DIR_NAME}/testing_with_dropout/partial_grids"

set TESTING_DATE_STRINGS=("20180125" "20180603" "20180823")
set DAILY_TIMES_SECONDS=("81000" "69600" "30600")

set date_string=${TESTING_DATE_STRINGS[$SLURM_ARRAY_TASK_ID]}
set daily_time_seconds=${DAILY_TIMES_SECONDS[$SLURM_ARRAY_TASK_ID]}

python3 -u "${CODE_DIR_NAME}/plot_predictions_with_uncertainty.py" \
--input_prediction_dir_name="${prediction_dir_name}" \
--input_radar_dir_name="${TOP_RADAR_DIR_NAME}" \
--first_date_string="${date_string}" \
--last_date_string="${date_string}" \
--daily_times_seconds ${daily_time_seconds} \
--percentile_levels 50 75 97.5 \
--use_fancy_quantile_method_for_stdev=0 \
--output_dir_name="${prediction_dir_name}/plots_with_uncertainty_and_radar/${date_string}"
