#!/bin/tcsh

#SBATCH --job-name="make_eval_figures_ungridded"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --mem=8G
##SBATCH --nodes=1
##SBATCH --ntasks=1
##SBATCH --cpus-per-task=1
##SBATCH --ntasks-per-node=1
#SBATCH --time=01:00:00
#SBATCH --array=1-6
#SBATCH --exclude=h28n12
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=make_eval_figures_ungridded_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_standalone/ml4convection"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_models/experiment12c/persistence_models"
set TOP_OUTPUT_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_project/journal_paper/60minute_models/persistence"

set SMOOTHING_RADII_PX=(0 1 2 3 4 5)
set smoothing_radius_px=${SMOOTHING_RADII_PX[$SLURM_ARRAY_TASK_ID]}
set smoothing_radius_string=`printf "%.10f" $smoothing_radius_px`

set model_dir_name="${TOP_MODEL_DIR_NAME}/smoothing_radius_px=${smoothing_radius_string}"
set temporal_eval_dir_name="${model_dir_name}/validation/evaluation/matching_distance_px=4.000000"
set non_temporal_eval_dir_name="${model_dir_name}/validation/evaluation/matching_distance_px=4.000000/advanced_scores_gridded=0"
set output_dir_name="${TOP_OUTPUT_DIR_NAME}/smoothing_radius_px=${smoothing_radius_string}"

python3 -u "${CODE_DIR_NAME}/make_eval_figures_ungridded.py" \
--input_temporal_eval_dir_name="${temporal_eval_dir_name}" \
--input_non_temporal_eval_dir_name="${non_temporal_eval_dir_name}" \
--output_dir_name="${output_dir_name}"
