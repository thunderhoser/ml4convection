#!/bin/tcsh

#SBATCH --job-name="plot_evaluation"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --mem=8G
#SBATCH --time=01:00:00
#SBATCH --array=1
#SBATCH --exclude=h28n12
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=plot_evaluation_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_standalone/ml4convection"
set MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_models/experiment13e/persistence_model"

set SMOOTHING_RADII_PX=(4)
set smoothing_radius_px=${SMOOTHING_RADII_PX[$SLURM_ARRAY_TASK_ID]}
set smoothing_radius_string=`printf "%1d" $smoothing_radius_px`

set evaluation_dir_name="${MODEL_DIR_NAME}/testing/smooth${smoothing_radius_string}/evaluation/matching_distance_px=4.000000"
set advanced_score_file_name="${evaluation_dir_name}/advanced_scores_gridded=0.p"
set output_dir_name="${evaluation_dir_name}/advanced_scores_gridded=0"

python3 -u "${CODE_DIR_NAME}/plot_evaluation.py" \
--input_advanced_score_file_name="${advanced_score_file_name}" \
--best_prob_threshold=0.05 \
--confidence_level=0.99 \
--output_dir_name="${output_dir_name}"
