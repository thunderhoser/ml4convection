#!/bin/tcsh

#SBATCH --job-name="plot_neigh_eval_comparison"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
##SBATCH --nodes=1
##SBATCH --ntasks=1
##SBATCH --cpus-per-task=1
##SBATCH --ntasks-per-node=1
#SBATCH --time=01:00:00
#SBATCH --array=1-8
#SBATCH --exclude=h28n12
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=plot_neigh_eval_comparison_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_standalone/ml4convection"
set ALL_EXPERIMENT_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_models"
set TOP_OUTPUT_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_project/loss_function_paper/experiments4to6_agg/detailed_neigh_eval/sans_filtering/comparison"

set SCORE_NAMES=("fss" "fss" "fss" "fss" "fss" "fss")
set FILTER_NAMES=("-neigh0" "-neigh8" "_wavelets0_min-resolution-deg=0.0000_max-resolution-deg=0.0500" "_wavelets0_min-resolution-deg=0.0500_max-resolution-deg=10000000000.0000" "_wavelets1_min-resolution-deg=0.0000_max-resolution-deg=0.0500" "_wavelets1_min-resolution-deg=0.0500_max-resolution-deg=10000000000.0000")
set SUBEXPERIMENT_ENUMS=("06" "06" "05" "05" "05" "05")
set MODEL_DESCRIPTION_STRINGS=("pixelwise" "17-by-17" "F0-0.1deg" "F0.1-infdeg" "W0-0.1deg" "W0.1-infdeg")

set MATCHING_DISTANCES_PX=(0 1 2 3 4 6 8 12)
set matching_distance_px=${MATCHING_DISTANCES_PX[$SLURM_ARRAY_TASK_ID]}
set matching_distance_string=`printf "%.6f" ${matching_distance_px}`

set input_file_names_string=""
set model_descriptions_string=""
set i=1

while ($i <= ${#SCORE_NAMES})
    echo "${ALL_EXPERIMENT_DIR_NAME}/lf_experiment${SUBEXPERIMENT_ENUMS[$i]}/${SCORE_NAMES[$i]}${FILTER_NAMES[$i]}/model*/validation_best_validation_loss/full_grids"
    set prediction_dir_names={${ALL_EXPERIMENT_DIR_NAME}/lf_experiment${SUBEXPERIMENT_ENUMS[$i]}/${SCORE_NAMES[$i]}${FILTER_NAMES[$i]}/model*/validation_best_validation_loss/full_grids}
    set prediction_dir_name=${prediction_dir_names[$#prediction_dir_names]}
    set this_input_file_name="${prediction_dir_name}/evaluation_sans_filtering/matching_distance_px=${matching_distance_string}/advanced_scores_gridded=0.p"

    set input_file_names_string="${input_file_names_string} ${this_input_file_name}"
    set model_descriptions_string="${model_descriptions_string} ${MODEL_DESCRIPTION_STRINGS[$i]}"
    
    @ i = $i + 1
end

set output_dir_name="${TOP_OUTPUT_DIR_NAME}/matching_distance_px=${matching_distance_string}"

python3 -u "${CODE_DIR_NAME}/plot_neigh_eval_comparison.py" \
--input_advanced_score_file_names ${input_file_names_string} \
--model_description_strings ${model_descriptions_string} \
--num_panel_rows=2 \
--confidence_level=0.95 \
--output_dir_name="${output_dir_name}"
