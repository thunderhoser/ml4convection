module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_standalone/ml4convection"
set ALL_EXPERIMENT_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_models"

# set SCORE_NAMES=("brier" "fss" "brier" "fss" "brier" "fss" "brier" "fss" "brier" "fss" "brier" "fss" "brier" "fss" "brier" "fss" "brier" "fss" "brier" "fss" "brier" "fss" "brier" "fss")
# set FILTER_NAMES=("_wavelets0_min-resolution-deg=0.0000_max-resolution-deg=0.1000" "_wavelets0_min-resolution-deg=0.0000_max-resolution-deg=0.1000" "_wavelets0_min-resolution-deg=0.0000_max-resolution-deg=0.2000" "_wavelets0_min-resolution-deg=0.0000_max-resolution-deg=0.2000" "_wavelets0_min-resolution-deg=0.1000_max-resolution-deg=10000000000.0000" "_wavelets0_min-resolution-deg=0.1000_max-resolution-deg=10000000000.0000" "_wavelets0_min-resolution-deg=0.2000_max-resolution-deg=10000000000.0000" "_wavelets0_min-resolution-deg=0.2000_max-resolution-deg=10000000000.0000" "_wavelets1_min-resolution-deg=0.0000_max-resolution-deg=0.1000" "_wavelets1_min-resolution-deg=0.0000_max-resolution-deg=0.1000" "_wavelets1_min-resolution-deg=0.0000_max-resolution-deg=0.2000" "_wavelets1_min-resolution-deg=0.0000_max-resolution-deg=0.2000" "_wavelets1_min-resolution-deg=0.1000_max-resolution-deg=10000000000.0000" "_wavelets1_min-resolution-deg=0.1000_max-resolution-deg=10000000000.0000" "_wavelets1_min-resolution-deg=0.2000_max-resolution-deg=10000000000.0000" "_wavelets1_min-resolution-deg=0.2000_max-resolution-deg=10000000000.0000" "-neigh0" "-neigh0" "-neigh1" "-neigh1" "-neigh4" "-neigh4" "-neigh12" "-neigh12")
# set SUBEXPERIMENT_ENUMS=("05" "05" "05" "05" "05" "05" "05" "05" "05" "05" "05" "05" "05" "05" "05" "05" "06" "06" "06" "06" "06" "06" "06" "06")

set score_name=${SCORE_NAMES[$SLURM_ARRAY_TASK_ID]}
set filter_name=${FILTER_NAMES[$SLURM_ARRAY_TASK_ID]}
set subexperiment_enum=${SUBEXPERIMENT_ENUMS[$SLURM_ARRAY_TASK_ID]}

set prediction_dir_names={${ALL_EXPERIMENT_DIR_NAME}/lf_experiment${subexperiment_enum}/${score_name}${filter_name}/model*/validation_best_validation_loss/full_grids}
set prediction_dir_name=${prediction_dir_names[$#prediction_dir_names]}

set MATCHING_DISTANCES_PX=(0 1 2 3 4 6 8 12)
set i=1

while ($i <= ${#MATCHING_DISTANCES_PX})
    set matching_distance_string=`printf "%.6f" ${MATCHING_DISTANCES_PX[$i]}`
    set output_dir_name="${prediction_dir_name}/evaluation/matching_distance_px=${matching_distance_string}/advanced_scores_gridded=0"
    set advanced_score_file_name="${output_dir_name}.p"
    
    python3 -u "${CODE_DIR_NAME}/plot_evaluation.py" \
    --input_advanced_score_file_name="${advanced_score_file_name}" \
    --confidence_level=0.95 \
    --output_dir_name="${output_dir_name}"
    
    @ i = $i + 1
end
